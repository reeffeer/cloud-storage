<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="rootElem" fx:controller="client.classes.LoginController"
      alignment="center" style="-fx-background-image: url(shell.png);"
      xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1">

    <TextField fx:id="login" maxWidth="200" promptText="Login" text="ivan">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </TextField>

    <PasswordField fx:id="password" maxWidth="200" promptText="Password" text="123">
        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>
    </PasswordField>

    <Button onAction="#auth" prefWidth="200" text="Authorization">
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
    </Button>
</VBox>